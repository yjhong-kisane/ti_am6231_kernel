#
# AM623x Kisan System B/D Character Device Drivers 
#

menu "Kisan Character Device Drivers For AM623x"

config KISAN_AM623x_CHAR
	bool "Kisan Character Device Drivers For AM623x"
	default n
	help
	   Support Kisan Character Device Drivers For AM623x.

config KISAN_AM623x_COMMON
    tristate "Kisan Common Driver For AM623x"
    depends on KISAN_AM623x_CHAR
    default n
    help
       Kisan Common Driver For AM623x.

config KISAN_AM623x_GPIO_INTR
    tristate "Kisan GPIO Interrupt Driver For AM623x"
    depends on KISAN_AM623x_CHAR
    default n
    help
       Kisan GPIO Interrupt Driver For AM623x.

config KISAN_AM623x_GPIO_HANDLER
    tristate "Kisan GPIO Handler Driver For AM623x"
    depends on KISAN_AM623x_CHAR
    default n
    help
       Kisan GPIO Handler Driver For AM623x.

config KISAN_AM623x_USB_NOTIFIER
    tristate "Kisan USB Notifier Driver For AM623x"
    depends on (USB=y || USB=USB_MUSB_HDRC) && KISAN_AM623x_CHAR
    default n
    help
       Kisan USB Notifier Driver For AM623x.

config KISAN_AM623x_BOARD_S1P
    tristate "Kisan Board S1P Driver For AM623x"
    depends on KISAN_AM623x_CHAR
    default n
    help
       Kisan Board S1P Driver For AM623x.

endmenu

